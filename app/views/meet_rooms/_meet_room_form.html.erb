<%= bootstrap_form_for(@room) do |f| %>
    <%= f.select :room_number, [["Meet Room 1", 1], ["Meet Room 2", 2]], { label: "選擇會議室:" }, { class: "selectpicker" } %>

    <%= f.select :meet_type, [["案件會議", 1], ["面試會議", 2]], { label: "選擇會議類型:" }, { class: "selectpicker" } %>

        <!-- select target date -->
    <div class="container">
      <div class="row">
        <div class='col-sm-6'>
          <div class="form-group">
            <label for="meet_room_target_date">選擇會議日期</label>
            <div class='input-group date' id='datetimepicker1'>
              <input type='date' class="form-control required" id="meet_room_target_date" name="meet_room[target_date]"/>
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
        <!-- select start time -->
    <div class="container">
        <div class="row">
            <div class='col-sm-6'>
                <div class="form-group">
                  <label for="meet_room_start_time">開始時間</label>
                  <div class='input-group date' id='datetimepicker2'>
                      <input type='text' class="form-control" name="meet_room[start_time]"/>
                      <span class="input-group-addon"><span class="glyphicon glyphicon-time"></span>
                      </span>
                  </div>
                </div>
            </div>
        </div>
    </div>
 

    <%= f.number_field(:time_unit_count, in: 1..20, label: "單位時數 (30min/unit)") %>

          <!-- select end time
    <div class="container">
        <div class="row">
            <div class='col-sm-6'>
                <div class="form-group">
                    <label for="meet_room_end_time">結束時間</label>
                    <div class='input-group date' id='datetimepicker3'>
                        <input type='text' class="form-control" name="meet_room[end_time]"/>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-time"></span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
             -->


          <!-- 選擇會議室所要開的專案 -->
    <%= f.form_group :case, label: { text: "選擇案件名稱" } do %>
      <% @projects.each do |p| %>
    	  <%= f.radio_button :case, p.id, label: p.name%>
    	<% end %>
  	<% end %>
    
    


    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
      送出
    </button>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title" id="myModalLabel">會議室使用時數扣除確認</h4>
          </div>
          <div class="modal-body">
            親愛的Telework會員您好，
             <p>1. XXXXXX </p>
             <p>2. XXXXXX </p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary"><%= f.submit "送出預約並扣款" %></button>
          </div>
        </div>
      </div>
    </div>


  <% end %>