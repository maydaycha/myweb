
<div class="main-content">

	<h1> 已借用會議室資訊 </h1>
	<%= link_to("Book system", meet_rooms_path) %>

	<h2> <%= current_user.username %> 你好</h2>

	<% @rooms.each do |room| %>
		<div class="tab-content">
			<div class="portlet box light-grey show-view">
				<div class="portlet-title">
	        <div class="caption">
	          預定的會議室
	        </div>
	      </div>
				<li> 會議室編號: <%= room.room_number%> </li>
				<li> 開始時間: <%= room.start_time %> </li>
				<li> 結束時間: <%= room.end_time %> </li>
				<li> 會議主持人: </li>
				<li> 會議參加人員: 
					<ul><% room.meet_room_members.each do |m|%>
						<li><%= User.find(m.user).username %></li>
					<% end %></ul>
				</li>

				<li> 付款資訊: </li>
				<li> 取消訂單 </li>

				<%= link_to("會議人員變動", meet_room_meet_room_members_path(room)) %>
				<%= link_to("會議室變更", edit_meet_room_path(room))%>
			</div>
		</div>
	<% end %>

</div>