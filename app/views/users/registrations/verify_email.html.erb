                        <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
                            <%= link_to "我沒有收到啟用信件，需要重新寄送郵件", new_confirmation_path(resource_name), :class=>"btn btn-danger" %>
                        <% end -%>
                        
                    </div>
                </div>
                <!-- END BOX -->
            </div>
            <!-- END MAIN CONTENT -->
        </div>
