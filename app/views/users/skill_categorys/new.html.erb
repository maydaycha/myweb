                        <div class="col-md-3 col-sm-4 col-xs-6 item">
                            <!-- <input type="radio" id="class1" name="class"> -->
                            <%= f.radio_button :main_skill_id, "0", id: "class1" %>
                            <label for="class1">
                                <img src="/img/class/class_1.jpg" alt="IT、軟體">
                                <!-- <p>IT、軟體</p> -->
                               <span><%= t(:"main_skill_category")[0]['name'] %></span>
                            </label>
                        </div>
                        <div class="col-md-3 col-sm-4 col-xs-6 item">
                            <!-- <input type="radio" id="class7" name="class"> -->
                            <%= f.radio_button :main_skill_id, "1", id: "class2"%>
                            <label for="class2">
                                <img src="/img/class/class_2.jpg" alt="工程、科學">
