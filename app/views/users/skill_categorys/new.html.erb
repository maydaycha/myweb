                                <!-- <p>設計、創意服務</p> -->
                                <span><%= t(:"main_skill_category")[2]['name'] %></span>
                            </label>
                        </div>
                        <div class="col-md-3 col-sm-4 col-xs-6 item">
                            <!-- <input type="radio" id="class4" name="class"> -->
                            <%= f.radio_button :main_skill_id, "3", id: "class4" %>
                            <label for="class4">
                                <img src="/img/class/class_4.jpg" alt="行銷、業務">
                                <!-- <p>行銷、業務</p> -->
                                <span><%= t(:"main_skill_category")[3]['name'] %></span>
                            </label>
                        </div>
                        <div class="col-md-3 col-sm-4 col-xs-6 item">
                            <!-- <input type="radio" id="class5" name="class"> -->
                            <%= f.radio_button :main_skill_id, "4", id: "class5" %>
