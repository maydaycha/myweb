        <link rel="stylesheet" type="text/css" href="/css/page/edit_category.css">
        <link rel="shortcut icon" href="/favicon.ico"/>
        <!-- END STYLE -->
    </head>
    <body>
        <!-- BEGIN NAVBAR -->
        <div class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse-nav">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
<!--                 <button type="button" class="navbar-toggle navbar-toggle-search" data-toggle="collapse" data-target=".navbar-collapse-search">
                    <i class="fa fa-search"></i>
                </button> -->
                <a class="navbar-brand" href="/"><img class="navbar-logo" src="/img/logo208.png" alt="快樂工作"></a>
            </div>
            <div class="navbar-collapse navbar-collapse-search collapse navbar-right">
                <!-- <div class="navbar-search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="搜尋您需要的人才">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </div> -->
            </div>
            <div class="navbar-collapse navbar-collapse-nav collapse navbar-right">
                <ul class="nav navbar-nav">
                    <% if user_signed_in? %>
                    <li><%= link_to I18n.t("page.header.settings"), users_profile_path(current_user)  %></li>
                    <li><%= link_to I18n.t("page.header.logout"), destroy_user_session_path, method: :delete %></li>
                    <% else %>
                    <li><%= link_to I18n.t("page.header.login"), new_user_session_path %></li>
                    <li><%= link_to I18n.t("page.header.signup"), index_sign_up_path %></li>
                    <% end %>
                </ul>
            </div>
        </div>
        <!-- END NAVBAR -->
        <!-- BEGIN PAGE -->
        <div class="page-content">
            <!-- BEGIN TITLE -->
            <h1 class="title"><%= I18n.t("page.skill_category_sub.container_title") %><span class="white-space-nowrap"><span class="point"><%= current_user.first_name %>, <%= current_user.last_name %></span>！</span></h1>
            <p class="subtitle"><%= I18n.t("page.skill_category_sub.container_description") %></p>
            <!-- END TITLE -->
            <!-- BEGIN MAIN CONTENT -->
            <div class="main-content">
                <h2 class="title"><i class="fa fa-chevron-circle-right"></i><%= I18n.t("page.skill_category_sub.container_choose_description") %></h2>
                <!-- BEGIN CLASS -->
                <div class="class">
                    <div class="row">
                        <%= form_for :user_skill_category, url: users_skill_categorys_path, html: {class: "class-form", data: {isempty: I18n.t("page.skill_category.choose_empty_alert")}} do |f| %>
                        <input type="hidden" value="<%= user_skill_category_id %>" name="user_skill_category_id">
                        <div class="col-md-3 col-xs-4 image">
                            <img src="/img/class/class_<%= @category_index+1 %>.jpg" alt="<%= t("main_skill_category")[@category_index]['name'] %>">
                            <p><%= t("main_skill_category")[@category_index]['name'] %></p>
                        </div>
                        <div class="col-md-9 col-xs-8 content">
                            <p class="title"><%= raw I18n.t("page.skill_category_sub.container_main", main_skill_category: '<span class="point">' + t("main_skill_category")[@category_index]['name'] + '</span>') %>
                            </p>
                            <% t("sub_skill_category")[@category_index].each_with_index do |cate, index| %>
                            <div class="item">
                                <% if current_user.user_skill_categories.size > 0 %>
                                    <% if current_user.user_skill_categories[0].main_skill_id.to_s == user_skill_category_id %>
                                        <% has_selected = false %>
                                        <% current_user.user_skill_categories.each do |e| %>
                                            <% if e.sub_skill_id.to_i == index %>
                                                <% has_selected = true %>
                                            <% end %>
                                        <% end %>
                                        <% if has_selected %>
                                            <input type="checkbox" name="class[]" value="<%= index %>" id="class<%= index %>" class="active" checked>
                                        <% else %>
                                            <input type="checkbox" name="class[]" value="<%= index %>" id="class<%= index %>">
                                        <% end %>
                                    <% else %>
                                        <input type="checkbox" name="class[]" value="<%= index %>" id="class<%= index %>">
                                    <% end %>
                                <% else %>
                                    <input type="checkbox" name="class[]" value="<%= index %>" id="class<%= index %>">
                                <% end %>
                                <label for="class<%= index %>">
                                    <%= cate['name'] %>
                                </label>
                            </div>
                            <% end %>
                        </div>
                        <div class="btns">
                            <a href="/users/skill_categorys/new" class="btn btn-default btn-lg left"><i class="fa fa-long-arrow-left"></i><%= I18n.t("page.skill_category_sub.button_previous") %></a>
                            <button type="submit" class="btn btn-primary btn-lg right"><%= I18n.t("page.skill_category_sub.button_save") %></i></button>
                        </div>
                        <!-- </form> -->
                        <% end %>
                    </div>
                </div>
                <!-- END CLASS -->
            </div>
            <!-- END MAIN CONTENT -->
        </div>
        <!-- END PAGE -->
        <!-- BEGIN FOOTER -->
        <div class="footer">
            <img class="footer-logo" src="/img/logo103.png" alt="">
            <div class="footer-nav">
                <%= link_to I18n.t("page.footer.about"), index_about_path %>
                <span class="bar">|</span>
                <%= link_to I18n.t("page.footer.privacy"), index_rule_path %>
                <span class="bar">|</span>
                <%= link_to I18n.t("page.footer.termofuse"), index_rule_path %>
                <span class="bar">|</span>
                <%= mail_to "service@sun-innovation.com", I18n.t("page.footer.contact") %>
            </ul>
        </div>
        <!-- END FOOTER -->

        <!-- BEGIN JAVASCRIPTS -->
        <!-- BEGIN 核心插件 -->
        <!--[if lt IE 9]>
            <script src="/plugins/html5shiv.min.js"></script>
            <script src="/plugins/respond.min.js"></script>
            <![endif]-->

            <script src="/plugins/jquery-1.11.0.min.js"></script>
            <script src="/plugins/bootstrap/js/bootstrap.min.js"></script>
            <script src="/plugins/jquery-placeholder/jquery.placeholder.js"></script>
            <!-- END 核心插件 -->
            <!-- BEGIN 頁面插件 -->
            <script src="/plugins/bootbox/bootbox.min.js"></script>
            <!-- END 頁面插件 -->
            <script type="text/javascript" src="/js/script.js"></script>
            <script type="text/javascript" src="/js/page/edit_category.js"></script>
            <script type="text/javascript" src="/js/google_analytics.js"></script>
            <script>
                jQuery(document).ready(function() {
                     Web.init();
                     EditCategory.init();
                    $("input[name='class[]']").each( function(e) {
                        if( $(this).attr("class") == 'active' ) $(this)[0].checked = true
                    })
                });
         </script>
