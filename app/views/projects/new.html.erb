<%= form_for @project, url: projects_path(@project), method: :post, html: {class: "form-horizontal", id: "submit_form"} do |f| %>

<p>
<%= f.label "選擇案件類別" %>
<select name="mainClass" class="input-group">
	<%= t(:main_skill_category).each_with_index do |s ,index| %>
	<option>
		<%= s['name'] %>
	</option>
	<% end %>
</select>
<select name="mainClass" class="input-group">
	<%= t(:sub_skill_category).each do |s| %>

	<%= s.each do |x| %>
	<option>
		<%= x['name'] %>
	</option>
	<% end %>
	<% end %>
</select>
</p>

<p>
<%= f.label :name, "案件名稱" %>
<%= f.text_field :name %>
</p>

<p>
<%= f.label :description, "工作內容" %>
<%= f.text_area :description %>
</p>

<p>
<%= f.label :description, "案件技能" %>
<%= f.text_area :description %>
</p>

<p>
<%= f.label :is_emergency, "急件" %>
<%= f.check_box :is_emergency %>我需要急件處理
</p>

<p>
<%= f.label :payment_type, "案件類型" %>
<%= f.radio_button :payment_type, 1, checked: true %>時薪制
<%= f.radio_button :payment_type, 2 %>固定薪資
</p>

<% if :payment_type == 1 %>

<p>
<%= f.label :required_user_level, "遠距工作者的經驗程度" %>
<%= f.radio_button :required_user_level, 1, checked: true %>入門
<%= f.radio_button :required_user_level, 2 %>中階
<%= f.radio_button :required_user_level, 3 %>專家
</p>

<p>
<%= f.label :end_date, "案件預計工期" %>
<%= f.radio_button :end_date, 1, checked: true %>3日
<%= f.radio_button :end_date, 2 %>7日
<%= f.radio_button :end_date, 3 %>14日
<%= f.radio_button :end_date, 4 %>1個月
<%= f.radio_button :end_date, 5 %>3個月
</p>

<% else %>

<% end %>

<p>
<%= f.label :work_type, "全職/兼職" %>
<%= f.radio_button :work_type, 1, checked: true %>全職
<%= f.radio_button :work_type, 2 %>兼職
</p>

<p>
<%= f.label :visibility, "能見度設定" %>
<%= f.radio_button :visibility, 1, checked: true %>開放式
<%= f.radio_button :visibility, 2 %>僅限Telework會員
<%= f.radio_button :visibility, 3 %>隱藏式
</p>

<p>
<%= f.label :file, "上傳附加檔案" %>
<%= f.file_field :file %>
</p>

<p>
<%= f.label :satisfication, "獲得的滿意度最低" %>
<select name="project[satisfication]">
  <option value="0">60</option>
  <option value="1">70</option>
  <option value="2">80</option>
  <option value="3">90</option>
  <option value="4">100以上</option>
</select>
</p>

<p>
<%= f.label :worked_hours, "已工作時數最低" %>
<select name="project[worked_hours]">
  <option value="0">1小時</option>
  <option value="1">5小時</option>
  <option value="2">10小時</option>
  <option value="3">20小時</option>
  <option value="4">30小時以上</option>
</select>
</p>

<p>
<%= f.label :worker_location, "所在地區" %>
<select name="project[worker_location]">
  <option value="0">1</option>
  <option value="1">2</option>
  <option value="2">3</option>
  <option value="3">4</option>
  <option value="4">5</option>
</select>
</p>

<p>
<%= f.label :english_levelenglish_level, "英文程度" %>
<select name="project[english_level]">
  <option value="0">好</option>
  <option value="1">普通</option>
  <option value="2">差</option>
</select>
</p>

<p>
<%= f.label :required_user_introrequired_user_intro, "需填寫自我介紹" %>
<%= f.check_box :required_user_intro %>需要申請者填寫個人介紹才能申請本工作
</p>

<p>
<%= f.submit %>
</p>

<% end %>


